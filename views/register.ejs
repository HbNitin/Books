<%- include('partials/header') %>
<div class="masthead">
    <div class="masthead-bg"></div>
    <div class="container h-100">
        <div class="row h-100">
            <div class="col-12 my-auto">
                <div class="masthead-content text-white py-5 py-md-0">
                    <h1 class="mb-3">Register</h1>
                </div>
                <div class="input-group input-group-newsletter">
                    <form action="/register" method="POST" class="form-group">
                    <input autocomplete="off" type="email" class="form-control margin_form" placeholder="Enter email..." aria-label="Enter email..." name="username"><br>
                    <input autocomplete="off" type="password" class="form-control margin_form" placeholder="Enter Password..." aria-label="Enter password..." name="password"><br>
                    <div class="input-group-append">
                        <button class="btn btn-secondary margin_form" type="submit" >SignUp!</button>
                    </div>
                </form>
                </div>
            </div>
        </div>
    </div>
</div>